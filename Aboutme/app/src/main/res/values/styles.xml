<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_sliders</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">@dimen/pad8</item>
    </style>

    <style name="TextView_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:padding">@dimen/pad8</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Aboutme_icon_style">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Aboutme_icon_style32dp">
        <item name="android:layout_width">@dimen/icon_size32dp</item>
        <item name="android:layout_height">@dimen/icon_size32dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
