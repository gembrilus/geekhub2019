<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/hided_group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_sliders"
            android:text="@string/main_info"
            android:textAlignment="center" />

        <include
            layout="@layout/part_main_info"
            android:visibility="gone" />

        <Button
            android:id="@+id/hided_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_sliders"
            android:text="@string/full_address"
            android:textAlignment="center" />

        <include
            layout="@layout/part_address_info"
            android:visibility="gone" />

        <Button
            android:id="@+id/hided_group3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_sliders"
            android:text="@string/work_and_study"
            android:textAlignment="center" />

        <include
            layout="@layout/part_job_and_study"
            android:visibility="gone" />

        <Button
            android:id="@+id/hided_group4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_sliders"
            android:text="@string/hobbes_interest"
            android:textAlignment="center" />

        <include
            layout="@layout/part_interest"
            android:visibility="gone" />

        <Button
            android:id="@+id/hided_group5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_sliders"
            android:text="@string/social_pages" />

        <include layout="@layout/part_social_settings"
            android:visibility="gone"/>

        <Button
            android:id="@+id/b_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:background="#6C8BC34A"
            android:layout_gravity="center|bottom"
            android:text="@string/save" />

    </LinearLayout>
</ScrollView>